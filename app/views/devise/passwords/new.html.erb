<div class="container-fluid" style="padding-top:100px;">
  <div class="row">
    <div class="col-4">
    </div>
    <div class="col-4 card", style="background-color: beige;border: 2px beige;">
      <h2 style="text-align:center;color: black;">Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field form-control", style="background-color:ghostwhite;border: outset;">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

